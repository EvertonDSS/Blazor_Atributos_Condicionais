@page "/atributo"
<button @onclick="@AlterarEstado">Alterar Estado</button>
<br />
Input disabled:
<input disabled="@Estado" />
<br />
Input Readonly:
<input readonly="@Estado" />
<br />
Input Checkbox:
<input type="checkbox" checked="@Estado" />
<br />

@code {
    private bool Estado { get; set; }
    private void AlterarEstado() {
        Estado = !Estado;
    }
}
